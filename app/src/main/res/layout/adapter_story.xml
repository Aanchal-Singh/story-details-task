<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_user_view">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/iv_user_image"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/iv_user_image"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Story Title"
                    android:textSize="12sp"
                    android:id="@+id/tv_username" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="handel"
                    android:id="@+id/tv_user_handle"
                    android:layout_below="@+id/tv_username"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="followers:25"
                android:id="@+id/tv_followers"
                android:layout_margin="8dp"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_user_view"
            android:layout_marginTop="4dp"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/view_divider"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider"
                android:layout_centerInParent="true"
                android:background="@null"
                android:id="@+id/follow_btn"
                android:text="FOLLOW"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider"
                android:layout_centerInParent="true"
                android:id="@+id/iv_story_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="throwback"
                android:layout_below="@id/iv_story_image"
                android:layout_margin="10dp"
                android:id="@+id/tv_story_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="likes"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/iv_story_image"
                android:layout_margin="10dp"
                android:id="@+id/tv_likes"
                />

        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>